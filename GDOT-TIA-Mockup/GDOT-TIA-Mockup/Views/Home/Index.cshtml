@{
    Layout = "~/Views/_Shared/_Layout.cshtml";
	ViewBag.Title = "Transportation Investment Act of 2010";
}

@section css {
    <style type="text/css">
        .callout {
            font-size: 0.8em;
            float: left;
            position: absolute;
            border: 1px solid gray;
            width: 220px;
            height: 130px;
            background: rgba(255,255,255,0.5);
            -moz-border-radius: 15px;
            -webkit-border-radius: 15px;
            border-radius: 15px;
            padding: 0 5px 0 10px;
            cursor: pointer;
        }
            .callout h4 {
                font-size: 1.1em;
            }

            p.withI {
                margin-bottom: 4px;
                background-image: url('/Content/img/i.png');
                background-repeat: no-repeat;
                padding-left: 22px;

            }


    </style>
}

@section facebook {
	<!-- Facebook script -->
	<div id="fb-root"></div>
	<script>(function (d, s, id) {
	var js, fjs = d.getElementsByTagName(s)[0];
	if (d.getElementById(id)) return;
	js = d.createElement(s); js.id = id;
	js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.4";
	fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
	<!-- Facebook script end -->
}

	<div class="row">
		<div class="col-md-8">
			<h1 style="margin-top: 0">Transportation Investment Act (TIA)</h1>
		</div>

		<div class="col-md-3">
			<div class="subtitle" style="color:#246092; font-size: 1.5em; font-style:italic; text-align: right; margin-right: -25px">Your Penny, Your Progress</div>
		</div>
	</div>
	<br />

	<div class="row">
		<div class="col-md-12">
			<div id="carousel-home" class="carousel slide" data-ride="carousel" data-interval="8000">

			  <!-- Wrapper for slides -->
			  <div class="carousel-inner" role="listbox">
				<div class="item active">
				  <img src="/Content/photos/banner1.png" alt="carosel banner" />
				  <div class="carousel-caption">
					Feature Project (2015)<br />
					<span class="description">Old Petersburg Road Groundbreaking in Columbia County</span>
				  </div>
				</div>
				<div class="item">
				  <img src="/Content/photos/banner2.png" alt="carosel banner" />
				  <div class="carousel-caption">
					<br />
					  
				  </div>
				</div>
				<div class="item">
				  <img src="/Content/photos/banner3.png" alt="carosel banner" />
				  <div class="carousel-caption">
					<br />
					  
				  </div>
				</div>
			  </div>

			  <!-- Controls -->
			  <a class="left carousel-control" href="#carousel-home" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			  </a>
			  <a class="right carousel-control" href="#carousel-home" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			  </a>
			</div>
			<br />
			<p>The Transportation Investment Act (TIA) Referendum was passed by Georgia voters in the regions of Central Savannah River Area, Heart of Georgia - Altamaha and River Valley. These three regions will implement a one percent regional sales tax over a ten year period to fund transportation improvements. Georgia DOT is responsible for the management of the budget, schedule, execution and delivery of all Projects contained in the Approved Investment Lists.</p>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-6" style="padding-left: 20px"><!---->
			<div style="position: relative">
                <div class="callout" style="left: -40px; top: 60px;" onclick="window.open('Project/rv', '_self')">
                    <h4>River Valley</h4>
                    <p class="withI">TIA Funds Budgeted (2011 Dollars):<br />
                    @ViewBag.rv.totals.TotalFundsBudgeted.ToString("C")</p>
                    <p class="withI">TIA Revenue Collected to Date:<br />
                    @ViewBag.rv.totals.TotalRevenueCollected.ToString("C")</p>
                    <p>Total Number of TIA Projects = @ViewBag.rv.totals.TotalProjects</p>
                </div>
                 <div class="callout" style="left: 180px; top: 0px;" onclick="window.open('Project/csra', '_self')">
                    <h4>Central Savannah River Area</h4>
                    <p class="withI">TIA Funds Budgeted (2011 Dollars):<br />
                    @ViewBag.csra.totals.TotalFundsBudgeted.ToString("C")</p>
                    <p class="withI">TIA Revenue Collected to Date:<br />
                    @ViewBag.csra.totals.TotalRevenueCollected.ToString("C")</p>
                    <p>Total Number of TIA Projects = @ViewBag.csra.totals.TotalProjects</p>
                </div>
                <div class="callout" style="left: 190px; top: 355px;" onclick="window.open('Project/hoga', '_self')">
                    <h4>Heart of Georgia Altamaha</h4>
                    <p class="withI">TIA Funds Budgeted (2011 Dollars):<br />
                    @ViewBag.hoga.totals.TotalFundsBudgeted.ToString("C")</p>
                    <p class="withI">TIA Revenue Collected to Date:<br />
                    @ViewBag.hoga.totals.TotalRevenueCollected.ToString("C")</p>
                    <p>Total Number of TIA Projects = @ViewBag.hoga.totals.TotalProjects</p>
                </div>
                <img id="tia-regions" src="/Content/img/tia_regions_sm.png" alt="State map of Georgia highlighting three regions: River Valley, Central Savannah River Area, and Heart of Georgia Altamaha" usemap="#regions" />
			<!----></div>

			<map name="regions" id="regions">
                <area alt="Link to River Valley project page" title="River Valley" href="/Project/rv" shape="rect" coords="0,175,152,342" />
                <area alt="Link to Central Savannah River Area project page" title="Central Savannah River Area" href="/Project/csra" shape="poly" coords="247,90,346,184,315,227,287,198,264,197,228,195,206,210,173,164,204,105" />
                <area alt="Link to Heart of Georgia Altamaha project page" title="Heart of Georgia Altamaha" href="/Project/hoga" shape="poly" coords="154,312,312,372,347,346,322,309,340,280,299,206,284,196,222,196,162,222" />
            </map>
		</div>

		<div class="col-lg-6"><br />
			<p style="font-size: 0.85em; font-weight: bold; max-width: 25em; margin: auto"><span class="blue">Total Projects:</span> <span class="green">@ViewBag.totalProjects</span><br />
			<span class="blue">Projects Under Construction:</span> <span class="green">#@ViewBag.totalConstructionProjects</span><br />
			<span class="blue">Projects Completed:</span> <span class="green">#@ViewBag.totalFinishedProjects</span><br />
			<span class="blue">TIA Funds Budgeted (2011 Dollars):</span> <span class="green">$1,175,318,463</span><br />
			<span class="blue">Total Expenditure to Date (in millions):</span> <span class="green">@ViewBag.totalExpenditure</span></p><br />
			<div style="text-align: center; width: 100%;">
				<div id="thermo1" style="width: 80px; margin: auto"></div>
			</div>
			<script>
				$('#thermo1').thermometer({
					height: 300,
					width: 250,
					startValue: '@ViewBag.totalTaxRevenueCollected',
					minValue: 0,
					maxValue: 1200,
					topText: "$1200",
					middleText: "$600",
					bottomText: "$0"
				});
				</script>
			<p style="text-align: center; font-weight: bold"><span class="blue">Tax Revenue Collected to Date</span><br />
				<span class="green">@ViewBag.totalTaxRevenueCollectedString</span>
			</p>
		</div>
	</div>
	<br /><br />
	<div class="row">
		<div class="col-sm-6 col-md-6">
			<!-- Twitter Embed Code -->
			<div style="width: 90%"><a class="twitter-timeline"  href="https://twitter.com/GADeptofTrans" data-widget-id="628058046166470657">Tweets by GADeptofTrans</a>
			<script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script></div>
			<!-- Twitter Embed Code End-->
		</div>

		<div class="col-sm-6 col-md-6">
			<!-- Facebook Embed Code -->
			<div class="fb-page" data-width="500" data-href="https://www.facebook.com/transportationinvestmentact" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="true"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/transportationinvestmentact"><a href="https://www.facebook.com/transportationinvestmentact">Georgia Transportation Investment Act - TIA</a></blockquote></div></div>
			<!-- Facebook Embed Code End -->
		</div>
	</div>
