@{
    Layout = "~/Views/_Shared/_Layout.cshtml";
	ViewBag.Title = "Transportation Investment Act of 2010";
}

@section css {
    <style type="text/css">
        .callout {
            font-size: 0.8em;
            float: left;
            position: absolute;
            border: 1px solid gray;
            width: 220px;
            height: 130px;
            background: rgba(255,255,255,0.5);
            -moz-border-radius: 15px;
            -webkit-border-radius: 15px;
            border-radius: 15px;
            padding: 0 5px 0 10px;
            cursor: pointer;
        }
            .callout h4 {
                font-size: 1.1em;
            }

            p.withI {
                margin-bottom: 4px;
                background-image: url('/Content/img/i.png');
                background-repeat: no-repeat;
                padding-left: 22px;

            }


    </style>
}

	<div class="row">
		<div class="col-md-8">
			<h1 style="margin-top: 0">Transportation Investment Act (TIA)</h1>
		</div>

		<div class="col-md-3">
			<div class="subtitle" style="color:#246092; font-size: 1.5em; font-style:italic; text-align: right; margin-right: -25px">Your Penny, Your Progress</div>
		</div>
	</div>
	<br />

	<div class="row">
		<div class="col-md-12">
			<div id="carousel-home" class="carousel slide" data-ride="carousel" data-interval="8000">

			  <!-- Wrapper for slides -->
			  <div class="carousel-inner" role="listbox">
				<div class="item active">
				  <img src="/Content/photos/banner1.png" alt="carosel banner" />
				  <div class="carousel-caption">
					Feature Project (2015)<br />
					<span class="description">Old Petersburg Road Groundbreaking in Columbia County</span>
				  </div>
				</div>
				<div class="item">
				  <img src="/Content/photos/banner2.png" alt="carosel banner" />
				  <div class="carousel-caption">
					<br />
					  
				  </div>
				</div>
				<div class="item">
				  <img src="/Content/photos/banner3.png" alt="carosel banner" />
				  <div class="carousel-caption">
					<br />
					  
				  </div>
				</div>
			  </div>

			  <!-- Controls -->
			  <a class="left carousel-control" href="#carousel-home" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			  </a>
			  <a class="right carousel-control" href="#carousel-home" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			  </a>
			</div>
			<br />
			<p>The Transportation Investment Act (TIA) Referendum was passed by Georgia voters in the regions of Central Savannah River Area, Heart of Georgia - Altamaha and River Valley. These three regions will implement a one percent regional sales tax over a ten year period to fund transportation improvements. Georgia DOT is responsible for the management of the budget, schedule, execution and delivery of all Projects contained in the Approved Investment Lists.</p>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div style="position: relative">
                <div class="callout" style="left: 3px; top: 130px;" onclick="window.open('Project/rv', '_self')">
                    <h4>River Valley</h4>
                    <p class="withI">TIA Funds Budgeted (2011 Dollars):<br />
                    @ViewBag.rv.totals.TotalFundsBudgeted.ToString("C")</p>
                    <p class="withI">TIA Revenue Collected to Date:<br />
                    @ViewBag.rv.totals.TotalRevenueCollected.ToString("C")</p>
                    <p>Total Number of TIA Projects = @ViewBag.rv.totals.TotalProjects</p>
                </div>
                 <div class="callout" style="left: 300px; top: 10px;" onclick="window.open('Project/csra', '_self')">
                    <h4>Central Savannah River Area</h4>
                    <p class="withI">TIA Funds Budgeted (2011 Dollars):<br />
                    @ViewBag.csra.totals.TotalFundsBudgeted.ToString("C")</p>
                    <p class="withI">TIA Revenue Collected to Date:<br />
                    @ViewBag.csra.totals.TotalRevenueCollected.ToString("C")</p>
                    <p>Total Number of TIA Projects = @ViewBag.csra.totals.TotalProjects</p>
                </div>
                <div class="callout" style="left: 190px; top: 510px;" onclick="window.open('Project/hoga', '_self')">
                    <h4>Heart of Georgia Altamaha</h4>
                    <p class="withI">TIA Funds Budgeted (2011 Dollars):<br />
                    @ViewBag.hoga.totals.TotalFundsBudgeted.ToString("C")</p>
                    <p class="withI">TIA Revenue Collected to Date:<br />
                    @ViewBag.hoga.totals.TotalRevenueCollected.ToString("C")</p>
                    <p>Total Number of TIA Projects = @ViewBag.hoga.totals.TotalProjects</p>
                </div>
                <img src="/Content/img/tiacounties.png" usemap="#regions" />
			</div>

			<map name="regions" id="regions">
                <area alt="River Valley" title="River Valley" href="Project/rv" shape="poly" coords="19,290,88,283,101,276,162,300,158,308,173,321,184,327,184,356,220,356,220,454,187,456,178,447,158,446,162,431,115,438,111,447,107,447,97,435,90,437,77,439,76,458,85,477,77,495,42,495,40,516,5,515,5,448,19,423,20,400,38,377" />
                <area alt="Central Savannah River Area" title="Central Savannah River Area" href="Project/csra" shape="poly" coords="314,227,317,216,340,203,341,165,359,149,397,159,509,282,494,296,498,330,480,338,454,300,436,295,364,297" />
                <area alt="Heart of Georgia Altamaha" title="Heart of Georgia Altamaha" href="Project/hoga" shape="poly" coords="244,461,248,416,286,420,292,411,269,365,272,359,373,308,423,309,454,318,500,436,468,481,513,539,501,563,460,557,377,507,351,480" />
            </map>
		</div>

		<div class="col-md-6"><br />
			<p style="font-size: 0.85em; font-weight: bold; max-width: 25em; margin: auto"><span class="blue">Total Projects:</span> <span class="green">@ViewBag.totalProjects</span><br />
			<span class="blue">Projects Under Construction:</span> <span class="green">#@ViewBag.totalConstructionProjects</span><br />
			<span class="blue">Projects Completed:</span> <span class="green">#@ViewBag.totalFinishedProjects</span><br />
			<span class="blue">TIA Funds Budgeted (2011 Dollars):</span> <span class="green">$1,175,318,463</span><br />
			<span class="blue">Total Expenditure to Date (in millions):</span> <span class="green"></span></p><br />
			<div style="text-align: center; width: 100%;">
				<div id="thermo1" style="width: 80px; margin: auto"></div>
			</div>
			<script>
				$('#thermo1').thermometer({
					height: 300,
					width: 350,
					startValue: '@ViewBag.totalTaxRevenueCollected',
					minValue: 0,
					maxValue: 1200,
					topText: "$1200",
					middleText: "$600",
					bottomText: "$0"
				});
				</script>
			<p style="text-align: center; font-weight: bold"><span class="blue">Tax Revenue Collected to Date</span><br />
				<span class="green">@ViewBag.totalTaxRevenueCollectedString</span>
			</p>
		</div>
	</div>
