@using GDOT_TIA.Models
@model List<GDOT_TIA.Models.Project>

@{
	if (Model.Count < 1) {
		<div class="row">
			<div class="col-md-12">
				<div class="alert alert-info" role="alert">No projects found</div>
			</div>
		</div>
	}
	
	else {
		<div class="row">
			<div class="col-md-12">
				<div class="alert alert-success" role="alert">@Model.Count projects found</div>
			</div>
		</div>
	}
}
	<br />
	
	<div id="project-container">
@{
	foreach (Project p in Model) {
		<section>
			<div class="row row-eq-height">
				<div class="col-md-8">
					<h3>@p.projectName</h3>
				</div>
				@if(p.projectPage != "") {
					<div class="col-md-4 text-right" style="vertical-align: bottom"><br />
						<p class="text-right"><a href="/Content/pdf/@p.projectPage" target="_blank">view project page</a></p>
					</div>
				}
				</div><br />
				<div class="row">
					<div class="col-md-4">
						<p><strong>PI No:</strong> @p.pino</p>
						<p><strong>Regional Project Id:</strong> @p.regionalProjectId</p>
						<p><strong>County:</strong> @p.county</p>
						<p><strong>Congressional District:</strong> @p.congressionalDistrict</p>
					</div>
					<div class="col-md-4">
						<p><strong>Regional Commission:</strong> @p.regionalCommission</p>
						<p><strong>Project Type:</strong> @p.projectType</p>
						@if(!p.progressPhotos.IsEmpty()) {
							<p><strong><a href="@p.progressPhotos">Project Progress Photos</a></strong></p>
						}
						<p><strong>Band:</strong> @p.band</p>
					</div>
					<div class="col-md-4">
						<p><strong>Original Project Budgeted:</strong> @p.originalBudget</p>
						<p><strong>Invoiced to Date:</strong> @p.invoicedToDate</p>
                        @if (p.completionDate.HasValue) {
                            <p><strong>Project Completion Date:</strong> @p.completionDate.Value.ToShortDateString()</p>
                        }
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<p><strong>Project Description: </strong>@p.description</p>
					</div>
				</div>
			</section>
		}
	}
</div>

<br />
