@section scripts {
	<script type="text/javascript">
	function showInfo(divId) {
		hideAll();
		$("#" + divId).show();
	}
	function hideAll() {
		$("#csrainfo").hide();
		$("#hogainfo").hide();
		$("#rvinfo").hide();
	}
	$("area").mouseover(hideAll());
	</script>
}
@{
    ViewBag.Title = "Projects by Region";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h1>View Projects By Region Below</h1>
<br />
<div class="row">
	<div class="col-md-6">
		<p><img id="tiaregions" src="/Content/img/tiacounties.png" border="0" width="589" height="695" usemap="#regionmap" alt="" onmouseout="hideAll()" /></p>

		<map name="regionmap" id="regionmap">
			<area id="rv" alt="River Valley" title="River Valley" data-toggle="tooltip" data-placement="left" href="/Project/RV" shape="poly" coords="233,346,236,481,117,529,2,528,12,268,114,262" onmouseover="showInfo('rvinfo');" onmouseout="hideAll()" />
			<area id="csra" alt="Central Savannah River Area" title="Central Savannah River Area" href="/Project/CSRA" shape="poly" coords="386,141,518,280,505,341,476,347,451,306,417,305,353,304,320,317,287,263,308,187,344,145" onmouseover="showInfo('csrainfo');" onmouseout="hideAll()" />
			<area  alt="Heart of Georgia Altamaha" title="Heart of Georgia Altamaha" href="/Project/HOGA" shape="poly" coords="248,359,357,302,411,307,444,307,465,323,516,440,507,494,521,548,498,578,400,542,317,486,241,478,239,437" onmouseover="showInfo('hogainfo');" onmouseout="hideAll()" />
		</map>
	</div>
	<div class="col-md-6">
		<div id="csrainfo">
			<div class="panel panel-csra">
				<div class="panel-heading">
					<h2 class="panel-title">Central Savannah River Area</h2>

				</div>
				<div class="panel-body">
					<p>TIA Funds Bugedted (2011 Dollars):@ViewBag.csraTaxCollected</p>
					<!--<p>Tax Revenue Collected to date:@ViewBag.</p>-->
					<p>Total Number of TIA Projects:@ViewBag.csraTotalProjects</p>
			  </div>
			</div>

			
		</div>
		<div id="hogainfo">
			<div class="panel panel-hoga">
				<div class="panel-heading">
					<h2 class="panel-title">Heart of Georgia Altamaha</h2>
				</div>
				<div class="panel-body">
					<p>TIA Funds Bugedted (2011 Dollars):@ViewBag.hogaTaxCollected</p>
					<!--<p>Tax Revenue Collected to date:@ViewBag.</p>-->
					<p>Total Number of TIA Projects:@ViewBag.hogaTotalProjects</p>
				</div>
			</div>
		</div>
		<div id="rvinfo">
			<div class="panel panel-rv">
				<div class="panel-heading">
					<h2 class="panel-title">River Valley</h2>
				</div>
				<div class="panel-body">
					<p>TIA Funds Bugedted (2011 Dollars):@ViewBag.rvTaxCollected</p>
					<!--<p>Tax Revenue Collected to date:@ViewBag.</p>-->
					<p>Total Number of TIA Projects:@ViewBag.rvTotalProjects</p>
				</div>
			</div>
		</div>
	</div>
</div>



